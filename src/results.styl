#results
  width 110%
  margin-top 20px
  table-layout fixed
  border-collapse collapse

  th
    border-bottom 2px solid black
  td, th
    padding 12px 4px
    text-align center
  td
    border-bottom 1px solid #f0f0f0
  tr.o td
    background #f6f6f6
  tr:hover td
    background #FFFFD8 !important
  th:first-of-type
    width 120px
  th.filter, td.filter
    text-align left
    span
      border-bottom 1px solid #B2D8F6
  tr.o td.better
    background #e4f3e4
  td.better
    background #eaffea
  tr.o td.worse
    background #f5e4e4
  td.worse
    background #ffecec
  tr.h
    height 90px
    
