#results
  width 100%
  margin-top 20px
  table-layout fixed
  border-collapse collapse
  &.focus td:not(.focus)
    color #ccc
  &.focus tr.focus
    td
      color #000
  th
    border-bottom 2px solid black
  td, th
    padding 10px 4px
    text-align center
  th:first-of-type
    width 120px
  th:first-of-type, td:first-of-type, td.left, th.left
    text-align left

  tr.header:not(:first-of-type)
    th
      padding-top 40px

  td
    border-top 1px solid #eee
  tr.o td
    background #f6f6f6
    border-top 1px solid #f0f0f0
  td.better
    color #fff
    background #009A07 !important
  td.better:after
    content: '▲'
    font-size: 80%
  td.worse
    color #fff
    background #FF3B3B !important
  td.worse:after
    content: '▼'
    font-size: 80%
